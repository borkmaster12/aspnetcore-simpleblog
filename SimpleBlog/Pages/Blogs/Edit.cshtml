@page
@model SimpleBlog.Pages.Blogs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Blog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Output.Id" />
            <div class="form-group">
                <label asp-for="Input.Title" class="control-label"></label>
                <input asp-for="Input.Title" class="form-control" />
                <span asp-validation-for="Input.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Content" class="control-label"></label>
                <textarea asp-for="Input.Content" class="form-control"></textarea>
                <span asp-validation-for="Input.Content" class="text-danger"></span>
            </div>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Output.CreatedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Output.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Output.LastUpdatedDate)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Output.LastUpdatedDate is null)
                {
                    <text>Never</text>
                } 
                else
                {
                    @Html.DisplayFor(model => model!.Output.LastUpdatedDate)
                }
            </dd>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
